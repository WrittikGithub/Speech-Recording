<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>CFBundleDevelopmentRegion</key>
    <string>$(DEVELOPMENT_LANGUAGE)</string>
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    <key>CFBundleIconFile</key>
    <string></string>
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>
    <key>CFBundleName</key>
    <string>$(PRODUCT_NAME)</string>
    <key>CFBundlePackageType</key>
    <string>APPL</string>
    <key>CFBundleShortVersionString</key>
    <string>$(FLUTTER_BUILD_NAME)</string>
    <key>CFBundleVersion</key>
    <string>$(FLUTTER_BUILD_NUMBER)</string>
    <key>LSMinimumSystemVersion</key>
    <string>$(MACOSX_DEPLOYMENT_TARGET)</string>
    <key>NSHumanReadableCopyright</key>
    <string>$(PRODUCT_COPYRIGHT)</string>
    <key>NSMainNibFile</key>
    <string>MainMenu</string>
    <key>NSPrincipalClass</key>
    <string>NSApplication</string>
    
    <!-- Microphone permission for flutter_sound and audio_waveforms -->
    <key>NSMicrophoneUsageDescription</key>
    <string>This app needs access to microphone for audio recording</string>
    
    <!-- Camera permission for image_picker -->
    <key>NSCameraUsageDescription</key>
    <string>This app needs access to camera for taking photos</string>
    
    <!-- Photo library permission for image_picker -->
    <key>NSPhotoLibraryUsageDescription</key>
    <string>This app needs access to photo library for picking images</string>
    
    <!-- Network access permission -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <true/>
    </dict>

    <!-- Notification permission for flutter_local_notifications -->
    <key>NSUserNotificationAlertStyle</key>
    <string>alert</string>
    
    <!-- File access permissions -->
    <key>NSDocumentsFolderUsageDescription</key>
    <string>This app needs access to documents for storing files</string>
    
    <!-- Required for saving audio files -->
    <key>NSDesktopFolderUsageDescription</key>
    <string>This app needs access to save audio files</string>
    
    <!-- Firebase messaging capabilities -->
    <key>UIBackgroundModes</key>
    <array>
        <string>remote-notification</string>
    </array>
</dict>
</plist>